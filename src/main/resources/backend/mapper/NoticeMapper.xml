<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="backend.mapper.NoticeMapper">

    <sql id="DynamicFields">
        <trim suffixOverrides=",">
            <if test="scope.id == true"> id, </if>
            <if test="scope.content == true"> content, </if>
            <if test="scope.created == true"> created, </if>
            <if test="scope.disabled == true"> disabled, </if>
        </trim>
    </sql>

    <sql id="DynamicWhere">
        <where>
            <if test="notice.id != null"> and id = #{notice.id} </if>
            <if test="notice.content != null"> and content = #{notice.content} </if>
            <if test="notice.created != null"> and created = #{notice.created} </if>
            <if test="notice.disabled != null"> and disabled = #{notice.disabled} </if>
        </where>
    </sql>

    <insert id="insertNotice">
        insert into Notice
        (
            uid,
            title,
            content,
            files,
            created,
            updated,
            draft,
            publish,
            disabled
        )
        values
        (
            #{uid},
            #{title},
            #{content},
            #{files},
            #{created},
            #{updated},
            #{draft},
            #{publish},
            #{disabled}
        )
    </insert>

    <select id="selectNotice" resultType="backend.model.entity.Notice">
        select
            <include refid="DynamicFields" />
        from Notice
            <include refid="DynamicWhere" />
    </select>

    <update id="updateNotice">
        update Notice
        <set>
            <if test="noticeUpdate.content != null"> content = #{noticeUpdate.content}, </if>
            <if test="noticeUpdate.created != null"> created = #{noticeUpdate.created}, </if>
            <if test="noticeUpdate.disabled != null"> disabled = #{noticeUpdate.disabled}, </if>
        </set>
        <where>
            <if test="noticeQuery.id != null"> and id = #{noticeQuery.id} </if>
            <if test="noticeQuery.content != null"> and content = #{noticeQuery.content} </if>
            <if test="noticeQuery.created != null"> and created = #{noticeQuery.created} </if>
            <if test="noticeQuery.disabled != null"> and disabled = #{noticeQuery.disabled} </if>
        </where>
    </update>
    
    <select id="selectNoticeByPage">
        select * from Notice
        where disabled = 1 and publish = 1 and draft = 0
    </select>

    <update id="deleteNotice">
        update Notice
        set disabled = 0
        where id = #{id}
    </update>

    <select id="selectNoticeByPageWithCondition">
        select * from Notice
        where publish = #{publish}
    </select>

    <select id="selectNoticeById">
        select * from Notice
        where id = #{id} and disabled = 1 and publish = 1 and draft = 0
    </select>

</mapper>